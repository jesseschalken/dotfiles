[user]
  email = me@jesseschalken.com
  name = Jesse Schalken
[core]
  autocrlf = input
  editor = vim
  pager = less --quit-if-one-screen --RAW-CONTROL-CHARS --chop-long-lines --tabs=2
  whitespace = blank-at-eol,space-before-tab,indent-with-non-tab,blank-at-eof,trailing-space,cr-at-eol
[push]
  default = upstream
[alias]
  br = branch -vv
  ci = commit
  co = checkout
  df = diff -w
  ds = diff -w --stat --stat-width=120 --stat-name-width=999
  lg = log --decorate --full-history --pretty=format:'%C(yellow bold)%h%Creset%C(bold blue)%d%Creset %C(cyan bold)%ad%Creset %C(magenta bold)%an%Creset %C(bold)%s%Creset' --date=short
  ls = ls-files
  st = status
[color]
  branch      = true
  diff        = true
  interactive = true
  pager       = true
  status      = true
  ui          = true
[i18n]
  filesEncoding = utf-8
[color "branch"]
  current  = bold blue reverse
  local    = bold blue
  remote   = bold magenta
  nobranch = bold red reverse
[color "diff"]
  frag       = bold blue
  meta       = dim
  new        = bold green
  old        = bold red
  whitespace = bold red reverse
[color "status"]
  header    = normal dim
  branch    = bold blue reverse
  nobranch  = bold red reverse
  added     = bold green
  updated   = bold green
  changed   = bold yellow
  unmerged  = bold red
  untracked = bold red
[color "decorate"]
  branch       = bold blue
  remoteBranch = bold magenta
  tag          = bold green
  stash        = bold cyan
  HEAD         = bold blue ul
[merge]
  conflictstyle = diff3
  renameLimit = 50000
[mergetool]
  keepBackup = false
