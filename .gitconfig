[user]
	name = Jesse Schalken
	email = me@jesseschalken.com
[core]
	autocrlf = input
	whitespace = blank-at-eol,space-before-tab,trailing-space,cr-at-eol
[mergetool]
	keepBackup = false
[i18n]
	filesEncoding = utf-8
[color]
	ui = auto
[alias]
	st = status
	ci = commit
	br = branch -a
	co = checkout
	df = diff
	dc = diff --cached
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
[color "branch"]
	current = blue ul bold
	local = blue bold
	remote = green bold
[color "diff"]
	meta = dim
	frag = blue bold
	old = red bold
	new = green bold
	whitespace = red reverse bold
[color "status"]
	header = normal dim
	added = yellow bold
	updated = yellow bold
	changed = green bold
	untracked = red bold
	branch = blue bold ul
	nobranch = red bold reverse
[merge]
	tool = kdiff3
