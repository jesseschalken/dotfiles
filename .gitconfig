[user]
	email = me@jesseschalken.com
	name = Jesse Schalken
[core]
	whitespace = -blank-at-eol,space-before-tab,-blank-at-eof
	editor = vim
[push]
	default = simple
[alias]
	br = -p branch -vva
	ci = commit -v
	co = checkout
	df = diff -w
	ds = diff --stat
	dw = diff --color-words
	lg = log --full-history
	ls = ls-files
	st = status
	aa = add --all
	rawlog = "log --pretty=raw --decorate --graph"
	delete-merged-branches = !git branch --merged | grep -v \"\\*\" | xargs -r git branch -d
	derp = merge --abort
	recent = -p for-each-ref --sort=-committerdate --format=\"%(color:green bold)%(objectname:short)  %(color:black bold)%(committerdate:relative) %(color:reset)%(HEAD) %(refname:short)  %(color:blue bold)%(committername)\" refs/heads/
	unadd = reset HEAD --
	unchange = checkout HEAD --
	merge-log = "!git log \"$1^..$1\""
[color]
	branch      = true
	diff        = true
	interactive = true
	pager       = true
	status      = true
	ui          = true
[i18n]
	filesEncoding = utf-8
[color "branch"]
	current  = bold blue reverse
	local    = bold blue
	remote   = bold green
	upstream = bold green
	nobranch = bold red reverse
[color "diff"]
	frag       = bold blue reverse
	meta       = bold black
	new        = bold green reverse
	func       = bold white reverse
	old        = bold red reverse
	whitespace = bold red reverse
	plain      = normal
[color "status"]
	header    = bold black
	branch    = bold blue reverse
	nobranch  = bold red reverse
	added     = bold green
	updated   = bold green
	changed   = bold yellow
	unmerged  = bold red
	untracked = bold red
[color "decorate"]
	branch       = bold blue
	remoteBranch = bold green
	tag          = bold green
	stash        = bold cyan
	HEAD         = bold blue reverse
[merge]
	conflictstyle = diff3
	renameLimit = 50000
[mergetool]
	keepBackup = false
[log]
	abbrevCommit = true
	decorate     = short
	date         = short
	follow = true
[format]
	pretty = format:%C(blue bold)%>(20)%an %Creset%C(green bold)%><(9)%h%Creset%C(bold black)%><(12)%ad%Creset %C(normal)%s%Creset%C(magenta bold)%d%Creset
[diff]
	wordRegex = [A-Z]?[a-z]+|[0-9]+|[A-Za-z]+|.
	renames = copies
	renameLimit = 50000
[gui]
	diffcontext = 10
[gc]
	pruneexpire = now
[credential]
	helper = store
[fetch]
	prune = true
