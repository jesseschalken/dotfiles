[user]
	email = me@jesseschalken.com
	name = Jesse Schalken
[core]
	whitespace = blank-at-eol,space-before-tab
[push]
	default = simple
[alias]
	br = branch -vv
	ci = commit -v
	co = checkout
	df = diff -w
	ds = diff -w --stat
	dw = diff -w --color-words
	lg = log --full-history
	ls = ls-files
	st = status
	aa = add --all
	rawlog = log --pretty=raw
	delete-merged-branches = !git branch --merged | grep -v \"\\*\" | xargs git branch -d
[color]
	branch      = true
	diff        = true
	interactive = true
	pager       = true
	status      = true
	ui          = true
[i18n]
	filesEncoding = utf-8
[color "branch"]
	current  = bold blue blue
	local    = bold blue
	remote   = bold magenta
	upstream = bold magenta
	nobranch = bold red red
[color "diff"]
	frag       = bold blue blue
	meta       = bold black black
	new        = bold green normal
	func       = black white
	old        = bold red normal
	whitespace = bold red red
	plain      = normal
[color "status"]
	header    = dim normal
	branch    = bold blue blue
	nobranch  = bold red red
	added     = bold green
	updated   = bold green
	changed   = bold yellow
	unmerged  = bold red
	untracked = bold red
[color "decorate"]
	branch       = bold blue
	remoteBranch = bold magenta
	tag          = bold green
	stash        = bold cyan
	HEAD         = bold blue blue
[merge]
	conflictstyle = diff3
	renameLimit = 50000
[mergetool]
	keepBackup = false
[log]
	date         = short
	abbrevCommit = true
	decorate     = short
[format]
	pretty = format:%C(yellow bold)%h%Creset %C(bold black)%t%Creset %C(cyan bold)%ad%Creset %C(red bold)%p%Creset %C(magenta bold)%an%Creset %C(normal)%s%Creset%C(bold blue)%d%Creset
[pager]
	branch = true
[diff]
	wordRegex = [A-Z]?[a-z]+|[0-9]+|[A-Za-z]+|\\S
	renames = copies
[gui]
	diffcontext = 10
[gc]
	pruneexpire = now
[credential]
	helper = cache --timeout=86400
