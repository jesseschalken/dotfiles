[user]
	email = me@jesseschalken.com
	name = Jesse Schalken
[core]
	whitespace = -blank-at-eol,space-before-tab,-blank-at-eof
[push]
	default = tracking
[alias]
	br = --paginate branch -vv
	ci = commit -v
	co = checkout
	df = diff -w
	ds = diff -w --stat
	dw = diff -w --color-words
	lg = log --full-history
	ls = ls-files
	st = status
	aa = add --all
	rawlog = log --pretty=raw
	delete-merged-branches = !git branch --merged | grep -v \"\\*\" | xargs git branch -d
[color]
	branch      = true
	diff        = true
	interactive = true
	pager       = true
	status      = true
	ui          = true
[i18n]
	filesEncoding = utf-8
[color "branch"]
	current  = bold blue reverse
	local    = bold blue
	remote   = bold magenta
	upstream = bold magenta
	nobranch = bold red reverse
[color "diff"]
	frag       = bold blue reverse
	meta       = dim normal
	new        = bold green normal
	func       = bold white reverse
	old        = bold red normal
	whitespace = bold red reverse
	plain      = normal
[color "status"]
	header    = dim normal
	branch    = bold blue reverse
	nobranch  = bold red reverse
	added     = bold green
	updated   = bold green
	changed   = bold yellow
	unmerged  = bold red
	untracked = bold red
[color "decorate"]
	branch       = bold blue
	remoteBranch = bold magenta
	tag          = bold green
	stash        = bold cyan
	HEAD         = bold blue reverse
[merge]
	conflictstyle = diff3
	renameLimit = 50000
[mergetool]
	keepBackup = false
[log]
	abbrevCommit = true
	decorate     = short
[format]
	pretty = format:%C(green bold)%<(8)%h%Creset %C(blue bold)%<(20)%an%Creset %C(dim)%<(16)%ar%Creset %C(normal)%s%Creset
[diff]
	wordRegex = [A-Z]?[a-z]+|[0-9]+|[A-Za-z]+|\\S
	renames = copies
[gui]
	diffcontext = 10
[gc]
	pruneexpire = now
[credential]
	helper = cache --timeout=86400
