#!/usr/bin/env php
<?php 

function do_scan($dir) {
    $total = 1;

    if (is_dir($dir) && !is_link($dir) ) {
        foreach (scandir($dir) as $file)
            if ($file !== '.' && $file !== '..')
                $total += do_scan("$dir/$file");

        print "$total\t$dir\n";
    }

    return $total;
};

array_shift($argv);
foreach ($argv as $arg)
    do_scan($arg);

